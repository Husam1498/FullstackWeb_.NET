@model EditProductModel


<div class="baslik-center">
    <h2 class="title">Urun ekleme Sayfası</h2>
</div>

<div class="divBackground">

    <form asp-action="UpdateProducts" data-ajax="true" data-ajax-method="post"
          data-ajax-update="#panelProducts" enctype="multipart/form-data">

        <div class="form-flex">

            <div class="input">

                <label asp-for="ProductName"></label>
                <div class="div-input">
                    <input class="form-input" asp-for="ProductName" dynamicInput />
                    <i class="fa-solid fa-user"></i>
                </div>
                <span asp-validation-for="ProductName" class="uyarı"></span>
            </div>

            <div class="input">

                <label asp-for="Price"></label>
                <div class="div-input">
                    <input class="form-input" asp-for="Price" dynamicInput />
                    <i class="fa-solid fa-user"></i>
                </div>
                <span asp-validation-for="Price" class="uyarı"></span>
            </div>

        </div>

        <div class="input">
            <label asp-for="Description"></label>
            <div class="div-input">
                <textarea style="background: var(--anaRenk);" class="form-input"
                          asp-for="Description" dynamicInput></textarea>
                <i class="fa-solid fa-user"></i>
            </div>
            <span asp-validation-for="Description" class="uyarı"></span>
        </div>

        <div class="checkCont">

            <div class="checkCont2">
                <div class="checkBoxTitle">
                    <h4>Categoriler</h4>
                </div>
                @if (Model.Categories != null)
                {
                    @foreach (var c in Model.Categories)
                    {
                        <label class="containerCheck">
                            <input type="checkbox" name="SelectedCategoryIds" value="@c.CategoryId"
                            @(Model.SelectedCategoryIds != null && Model.SelectedCategoryIds.Contains(c.CategoryId) ? "checked" : "") />
                          
                            <div class="checkmark"></div>
                            <p>@c.CategoryName</p>
                        </label>

                    }
                    <div class="input">

                        <span asp-validation-for="SelectedCategoryIds" class="uyarı"></span>
                    </div>

                }

            </div>

            <div class="checkCont2">
                <div class="checkBoxTitle">
                    <h4>Renkler</h4>
                </div>
                @if (Model.Colors != null)
                {
                    @foreach (var c in Model.Colors)
                    {
                        <label class="containerCheck">
                            <input type="checkbox" name="SelectedColorIds" value="@c.ColorId"
                            @(Model.SelectedColorIds != null && Model.SelectedColorIds.Contains(c.ColorId) ? "checked" : "") />

                            <div class="checkmark"></div>
                            <p>@c.ColorName</p>
                        </label>
                    }
                    <div class="input">

                        <span asp-validation-for="SelectedColorIds" class="uyarı"></span>
                    </div>

                }

            </div>

            <div class="checkCont2">
                <div class="checkBoxTitle">
                    <h4>Bedenler</h4>
                </div>
                @if (Model.Sizes != null)
                {
                    @foreach (var c in Model.Sizes)
                    {
                        <label class="containerCheck">
                            <input type="checkbox" name="SelectedSızeIds" value="@c.SizeId"
                            @(Model.SelectedSızeIds != null && Model.SelectedSızeIds.Contains(c.SizeId) ? "checked" : "") />

                            <div class="checkmark"></div>
                            <p>@c.SizeName</p>
                        </label>
                    }
                    <div class="input">

                        <span asp-validation-for="SelectedSızeIds" class="uyarı"></span>
                    </div>

                }

            </div>

        </div>

        <div id="photoPanel" class="carousel">
            @Html.Partial("_photoDeletePartial", Model.Photos)
        </div>


        <div class="resimYukleme">
            <div class="checkBoxTitle">
                <h4 style="display:block">Fotograf Ekleme</h4>
            </div>
            <div class="center">
                <div class="file-upload-form">
                    <label class="file-upload-label">
                        <div class="file-upload-design">
                            <svg viewBox="0 0 640 512" height="1em">
                                <path d="M144 480C64.5 480 0 415.5 0 336c0-62.8 40.2-116.2 96.2-135.9c-.1-2.7-.2-5.4-.2-8.1c0-88.4 71.6-160 160-160c59.3 0 111 32.2 138.7 80.2C409.9 102 428.3 96 448 96c53 0 96 43 96 96c0 12.2-2.3 23.8-6.4 34.6C596 238.4 640 290.1 640 352c0 70.7-57.3 128-128 128H144zm79-217c-9.4 9.4-9.4 24.6 0 33.9s24.6 9.4 33.9 0l39-39V392c0 13.3 10.7 24 24 24s24-10.7 24-24V257.9l39 39c9.4 9.4 24.6 9.4 33.9 0s9.4-24.6 0-33.9l-80-80c-9.4-9.4-24.6-9.4-33.9 0l-80 80z"></path>
                            </svg>
                            <p>Drag and Drop</p>
                            <p>or</p>
                            <span class="browse-button">Browse file</span>
                        </div>
                        <input type="file" name="files" accept=".jpg,.png ,jpeg" multiple />
                    </label>
                </div>
            </div>
        </div>

        <input type="hidden" asp-for="ProductId" />
        
  
        <div class="form-button-div">
            <button type="submit"  class="form-button"><i class="fa-regular fa-floppy-disk"></i>Kaydet </button>
        </div>

    </form>

</div>



@if (string.IsNullOrEmpty(Model.Done) == false)
{
    <script>
        createToastSuccess("Başarılı", "@Model.Done");
        
    </script>

}
@section Scripts{
    <script src="~/lib/jquery/jquery.min.js"></script>
    <script src="~/lib/jquery-ajax-unobtrusive/jquery.unobtrusive-ajax.min.js"></script>
}
